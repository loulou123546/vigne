<!-- En tête -->
<header class="w3-container w3-hide-small hero-bg w3-center w3-margin-32 w3-padding-16">
  <img src="logo.png" alt="" width="100">
  <h1 class="w3-xxxlarge"><b><%= locals.parcel.name %></b></h1>
  <h2 class="w3-xlarge">Rendement : <strong><%= locals.parcel.rend %></strong> Kg/Ha</h2>
</header>
<header class="w3-container w3-hide-medium w3-hide-large hero-bg w3-center w3-padding-16">
  <img src="logo.png" alt="" width="100">
  <h1 class="w3-xxlarge"><b><%= locals.parcel.name %></b></h1>
  <h2 class="w3-large">Rendement : <strong><%= locals.parcel.rend %></strong> Kg/Ha</h2>
</header>

<ul class="breadcrumb">
  <li><a href="/">Tableau de bord</a></li>
  <li><%= locals.parcel.name %></li>
</ul>

<div class="w3-bar w3-center size-fixed">
    <a href="/parcel/<%= locals.parcel.parcel_id %>/observation/add" class="w3-button tool-green"><i class="fa fa-plus-square"></i></a>
    <a href="/parcel/<%= locals.parcel.parcel_id %>/edit" class="w3-button tool-yellow"><i class="fa fa-pencil"></i></a>
    <a href="/parcel/<%= locals.parcel.parcel_id %>/delete" class="w3-button tool-red"><i class="fa fa-trash"></i></a>
</div>

<table class="w3-table w3-bordered w3-centered">
    <thead>
        <tr>
            <th>Année</th>
            <th>Taux de sucre <%= locals.observations[locals.observations.length - 1] ? (locals.observations[locals.observations.length - 1].sugar_rate_real ? 'réel' : 'prévu') : 'prévu' %></th>
            <th>Rendement (Kg/Ha)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for (var i = 0 ; i < locals.observations.length ; i++) { %>
        <tr>
            <td><%= moment(locals.observations[i].step_1_date).format('YYYY') %></td>
            <td><%= locals.observations[i].sugar_rate_real || locals.observations[i].sugar_rate || 'Non renseigné' %></td>
            <td><%= locals.parcel.rend %></td>
            <td>
            <a href="/parcel/<%= locals.parcel.parcel_id %>/observation/<%= locals.observations[i].id %>/edit" class="w3-button tool-yellow tooltip"><i class="fa fa-pencil"></i></a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
