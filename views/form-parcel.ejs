<header class="w3-container w3-hide-small hero-bg w3-center w3-margin-32 w3-padding-32">
  <h1 class="w3-xxlarge"><b><%= locals.parcel ? 'Editer' : 'Ajouter' %> une parcelle</b></h1>
</header>
<header class="w3-container w3-hide-medium w3-hide-large hero-bg w3-center w3-padding-32">
    <h1 class="w3-large"><b><%= locals.parcel ? 'Editer' : 'Ajouter' %> une parcelle</b></h1>
</header>

<div class="w3-row">
  <div class="w3-col w3-hide-small m2 l4"> &nbsp; </div>
  <div class="w3-col s12 m8 l4">
    <form class="w3-container w3-card-4 w3-white" method="post" action="<%= locals.parcel ? `/parcel/${locals.parcel.id}/edit` : '/parcel/add' %>">
      <p><label>Nom</label>
      <input class="w3-input w3-border" name="name" type="text" placeholder="Nom" value="<%= locals.parcel ? locals.parcel.name : '' %>"></p>

      <p>
        <label>Variété</label>
        <select type="select" name="type" value="<%= locals.parcel ? locals.parcel.type : 1 %>">
        <% for(var i = 1 ; i < locals.parcel_types.length ; i++) { %>
          <option value="<%= i %>" <%= (locals.parcel && locals.parcel.type === i) ? 'selected' : '' %> > <%= parcel_types[i] %></option>
        <% } %>
        </select>
      </p>

      <p><label>Surface (m2)</label>
      <input class="w3-input w3-border" name="area" type="number" step="1" placeholder="0" value="<%= locals.parcel ? locals.parcel.area : '' %>"></p>

      <p><label>Densité</label>
      <input class="w3-input w3-border" name="density" type="number" step="0.01" placeholder="0.0" value="<%= locals.parcel ? locals.parcel.density : '' %>"></p>

      <p><label>Date de plantation</label>
      <input class="w3-input w3-border" name="date_planting" type="date" value="<%= locals.parcel ? locals.parcel.date_planting : '' %>"></p>

      <p><label>Commune</label>
      <input class="w3-input w3-border" name="city" type="text" value="<%= locals.parcel ? locals.parcel.city : '' %>"></p>

      <p class="w3-center"><button class="w3-btn action-bg onhover-bg">Valider <i class="fa fa-check-square"></i></button></p>
    </form>
  </div>
  <div class="w3-col w3-hide-small m2 l4"> &nbsp; </div>
</div>
