<header class="w3-container w3-hide-small hero-bg w3-center w3-margin-32 w3-padding-32">
  <h1 class="w3-xxlarge"><b>Ajouter une observation</b></h1>
</header>
<header class="w3-container w3-hide-medium w3-hide-large hero-bg w3-center w3-padding-32">
    <h1 class="w3-large"><b>Ajouter une observation</b></h1>
</header>

<div class="w3-row">
  <div class="w3-col w3-hide-small m2 l4"> &nbsp; </div>
  <div class="w3-col s12 m8 l4">
    <form class="w3-container w3-card-4 w3-white">
      <p><label>Nom de la parcelle</label>
      <input class="w3-input w3-border" name="name" type="text"></p>

      <p>
        <label>Variété</label>
        <select name="type">
          <option value="type1">1</option>
          <option value="type2">2</option> <!-- loaded on server -->
          <option value="type3">3</option>
        </select>
      </p>

      <p><label>Surface en Hectare</label>
      <input class="w3-input w3-border" name="area" type="number" step="0.1"></p>

      <p><label>Densité (pied par m²)</label>
      <input class="w3-input w3-border" name="density" type="number" step="0.1"></p>

      <p><label>Date de plantation</label>
      <input class="w3-input w3-border" name="data_planting" type="date"></p>

      <p><label>Commune</label>
      <input class="w3-input w3-border" name="city" type="text"></p>

      <p class="w3-center"><button class="w3-btn action-bg onhover-bg">Valider <i class="fa fa-check-square"></i></button></p>
    </form>
  </div>
  <div class="w3-col w3-hide-small m2 l4"> &nbsp; </div>
</div>
