
<header class="w3-container w3-hide-small hero-bg w3-center w3-margin-32 w3-padding-32" style="padding-top: 0px!important;">
  <div class="w3-container hero-bg w3-cell-row">
    <div class="w3-cell onhover-bg w3-padding-16">Mon exploitation</div>
    <div class="w3-cell onhover-bg w3-padding-16">Espace collaboratif</div>
    <div class="w3-cell onhover-bg w3-padding-16">Alertes</div>
    <div class="w3-cell onhover-bg w3-padding-16"><%= locals.mail || '' %></div>
  </div>
  <h1 class="w3-jumbo"><b>Mon exploitation</b></h1>
  <h2 class="w3-xlarge">Rendement : <span class="w3-tag hover-bg"><%= locals.totalrend %></span> Kg/Ha</h2>
</header>
<header class="w3-container w3-hide-medium w3-hide-large hero-bg w3-center w3-padding-32">
  <h1 class="w3-xxlarge"><b>Mon exploitation</b></h1>
  <h2 class="w3-large">Rendement : <span class="w3-tag hover-bg"><%= locals.totalrend %></span> Kg/Ha</h2>
</header>

<a href="/parcel/add" class="w3-btn action-bg onhover-bg add-parcel">+ Ajouter une parcelle</a>

<table class="w3-table w3-hide-small w3-bordered w3-centered">
  <thead>
    <tr>
      <th>Parcelle</th>
      <th>Rendement (Kg/Ha)</th>
      <th>Derni√®re modification</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i = 0 ; i < locals.parcels.length ; i++) { %>
    <tr>
      <td class="tooltip"><a href="parcel/<%= locals.parcels[i].id %>"><%= locals.parcels[i].name %></a><span class="tooltiptext"> &nbsp; Voir les infos &nbsp; </span></td>
      <td><%= locals.parcels[i].rend %></td>
      <td><%= locals.parcels[i].lastrenew %></td>
      <td>
        <a href="/parcel/<%= locals.parcels[i].id %>/observation/add %>" class="w3-button w3-green tooltip"><span class="tooltiptext"> &nbsp; Noter une observation &nbsp; </span><i class="fa fa-plus-square"></i></a>
        <a href="/parcel/<%= locals.parcels[i].id %>/edit" class="w3-button w3-yellow tooltip"><span class="tooltiptext"> &nbsp; Modifier la parcelle &nbsp; </span><i class="fa fa-pencil"></i></a>
        <a href="/parcel/<%= locals.parcels[i].id %>/delete" class="w3-button w3-red tooltip"><span class="tooltiptext"> &nbsp; Supprimer la parcelle &nbsp; </span><i class="fa fa-trash"></i></a>
      </td>
    </tr>
    <% } %>
  </tbody>
</table> 

<% for(var i = 0 ; i < locals.parcels.length ; i++) { %>
<div class="w3-card-4 w3-white w3-center w3-margin w3-padding w3-hide-medium w3-hide-large">
  <h3><%= locals.parcels[i].name %></h3>
  <ul class="w3-left-align">
    <li>Rendement : <%= locals.parcels[i].rend %> Kg/Ha</li>
    <li>Date : <%= locals.parcels[i].lastrenew %></li>
  </ul>
  <a href="/parcel/<%= locals.parcels[i].id %>/observation/add %>" class="w3-button w3-green tooltip"><span class="tooltiptext"> &nbsp; Noter une observation &nbsp; </span><i class="fa fa-plus-square"></i></a>
        <a href="/parcel/<%= locals.parcels[i].id %>/edit" class="w3-button w3-yellow tooltip"><span class="tooltiptext"> &nbsp; Modifier la parcelle &nbsp; </span><i class="fa fa-pencil"></i></a>
        <a href="/parcel/<%= locals.parcels[i].id %>/delete" class="w3-button w3-red tooltip"><span class="tooltiptext"> &nbsp; Supprimer la parcelle &nbsp; </span><i class="fa fa-trash"></i></a>
</div>
<% } %>
